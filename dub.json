{
	"name": "wasmer",
	"description": "A standalone WebAssembly runtime for running WebAssembly outside of the browser",
	"authors": [
		"Chance Snow"
	],
	"license": "MIT",
	"copyright": "Copyright Â© 2020-2021, Chance Snow",
  "targetType": "library",
  "systemDependencies": "linux: wasmer-1.0.0-rc1",
	"preGenerateCommands": [
    "make source/wasmer/bindings/package.d"
  ],
  "preBuildCommands": [
    "make wasmer"
  ],
  "lflags-posix": [
    "-L$PACKAGE_DIR/lib"
  ],
  "libs": [
    "wasmer"
  ],
  "configurations": [
    {
      "name": "library"
    },
    {
      "name": "static",
      "targetType": "staticLibrary"
    }
  ]
}
